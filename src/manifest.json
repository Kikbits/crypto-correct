{
  "manifest_version": 2,

  "name": "Crypto Correct",
  "description": "Shows prices in USD on bittrex.com. Uses the BTC/USD price given on bittrex.com for conversions.",
  "version": "1.3",

  "icons": {
    "16": "img/icon128.png",
    "48": "img/icon128.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://bittrex.com/*"],
      "css": ["css/main.css"],
      "js": ["js/vendor/jquery.min.js", "js/vendor/arrive.min.js", "js/config.js", "js/contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [

  ]
}